{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES5"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "include": ["formadocs.js", "src/**/*.ts", "src/**/*.tsx"]
}
